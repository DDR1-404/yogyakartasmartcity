<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_list_announcement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title_list_announcement"
        style="@style/TextContent.TitleList"
        android:textSize="14sp"
        tools:text="Test test"/>

    <TextView
        android:id="@+id/txt_list_announcement"
        style="@style/TextContent"
        android:paddingBottom="10dp"
        android:paddingTop="4dp"
        android:textSize="14sp"
        tools:text="Test test"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_author_list_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            tools:text="Obi Ismail" />

        <TextView
            android:id="@+id/txt_date_list_announcement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:maxLines="2"
            android:textSize="12sp"
            tools:text="7 jam yang lalu" />
    </RelativeLayout>

</LinearLayout>