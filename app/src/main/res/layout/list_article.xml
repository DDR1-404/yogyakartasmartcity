<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_list_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout_list_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="4dp"
        android:elevation="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_list_article"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/article_detail"/>

        <TextView
            android:id="@+id/txt_title_list_article"
            style="@style/TextContent"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/img_list_article"
            android:layout_toRightOf="@+id/img_list_article"
            android:padding="10dp"
            android:textSize="14sp"
            tools:text="Tolong! SMA N 3 Huruna di Nias Rusak Parah: Lantai Tanah Becek, Atap Jebol"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_list_article"
            android:layout_toEndOf="@+id/img_list_article"
            android:layout_toRightOf="@+id/img_list_article"
            android:gravity="bottom"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/txt_author_list_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="Penulis: Obi Ismail" />

            <TextView
                android:id="@+id/txt_date_list_article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:maxLines="2"
                android:textSize="12sp"
                tools:text="7 jam yang lalu" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>