<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PoppinsRegulerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="PoppinsRegulerButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="PoppinsRegulerRadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.TitleList">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinsmedium</item>
    </style>

    <style name="TextContent.AccountTitle">
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="TextContent.TitleEditText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
    </style>

    <style name="TextContent.TitleEditText.BgGradient">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleEditText.BgWhite">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.BgGradient">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText.BgWhite">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>