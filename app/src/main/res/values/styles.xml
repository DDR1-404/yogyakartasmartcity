<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/PoppinsRegulerTextViewStyle</item>
        <item name="android:buttonStyle">@style/PoppinsRegulerButtonStyle</item>
        <item name="android:radioButtonStyle">@style/PoppinsRegulerRadioButtonStyle</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.TitleList">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.AccountSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.TitleEditText">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextContent.BgGradient">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.TitleEditText.BgGradient">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.TitleEditText.BgWhite">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextContent.Setting">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText.BgGradient">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText.BgWhite">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.General">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
